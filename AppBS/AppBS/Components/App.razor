                setTimeout(() => {
                    document.getElementById("btnActualizar").addEventListener("click", () => {
                        let comentario = document.getElementById("inputComentario").value;
                        instance.invokeMethodAsync("ActualizarJustificacion", comentario);
                    });
                }, 200);
            }
        };




