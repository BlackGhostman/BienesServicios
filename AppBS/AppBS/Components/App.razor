 window.checkCardConnection = async function () {
    try {
        // Esto verifica si el navegador tiene acceso a un dispositivo de firma.
        const cards = await navigator.credentials.get({ publicKey: {} });
        if (cards) {
            return "Conectado";
        } else {
            return "No conectado";
        }
    } catch (error) {
        return "Error al verificar conexión";
    }
}










